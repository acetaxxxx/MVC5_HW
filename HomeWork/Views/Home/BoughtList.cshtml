@model HomeWork.ViewModels.BoughtListViewModel


<div class="well">
    @using (Ajax.BeginForm("WriteData" , new AjaxOptions() { HttpMethod = "post" , Url = Url.Action("WriteData") , UpdateTargetId = "target" , InsertionMode = InsertionMode.Replace  }))
    {
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="category" class="col-sm-2 control-label">類別</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(Model => Model.InputData.ItemCategory ,
                   new List<SelectListItem>() {
                   new SelectListItem{Value="0",Text="支出" },new SelectListItem{ Value="1",Text="收入" }}
                   , new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.InputData.ItemCategory)
                </div>
            </div>
            <div class="form-group">
                <label for="money" class="col-sm-2 control-label">金額</label>
                <div class="col-sm-10">
                    @Html.EditorFor(Model => Model.InputData.Price)
                    @Html.ValidationMessageFor(Model => Model.InputData.Price)
                </div>
            </div>
            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">日期</label>
                <div class="col-sm-10">
                    @Html.EditorFor(Model => Model.InputData.ItemDate)
                    @Html.ValidationMessageFor(Model => Model.InputData.ItemDate)
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-2 control-label">備註</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(Model => Model.InputData.Remark)
                    @Html.ValidationMessageFor(Model => Model.InputData.Remark)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>

                </div>
            </div>
        </div>
    }
</div>

<div id="target">
    @Html.Partial("BoughtListGridPartialView")
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
<script>
    
</script>
}