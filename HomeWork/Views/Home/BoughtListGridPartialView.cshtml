@using HomeWork.ViewModels

    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
            </thead>
            <tbody>
                @{int c = 0; }
                @foreach (BoughtItem item in Model.Result)
                {
                    <tr style="color:@(item.ItemCategory=="支出"?"red":"blue")">
                        <td>@(++c)</td>
                        <td >@item.ItemCategory</td>
                        <td>@item.ItemDate</td>
                        <td>@string.Format("{0:C}", item.Price)</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>

